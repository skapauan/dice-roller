{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./build",
        "module": "commonjs",
        "target": "es2020",
        "lib": ["es2020"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "src/**/*.test.ts",
        "node_modules"
    ]
}